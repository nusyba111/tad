<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Loan Payment Sequence-->
        <record id="loan_payment" model="ir.sequence">
            <field name="name">loan payment</field>
            <field name="code">loan.payment</field>
            <field name="prefix">/Payment/</field>
            <field name="padding">4</field>
            <field name="active">True</field>
            <field eval="1" name="number_increment"/>
        </record>

        <!-- Loan Postpone Sequence-->
        <record id="loan_postpone" model="ir.sequence">
            <field name="name">loan postpone</field>
            <field name="code">loan.postpone</field>
            <field name="prefix">/POS/</field>
            <field name="padding">4</field>
            <field name="active">True</field>
            <field eval="1" name="number_increment"/>
        </record>

    </data>
</odoo>
