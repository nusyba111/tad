<odoo>
    <data>
        <record id="hr_incentive_teamplate" model="mail.template">
            <field name="name">Staff Payment Form</field>
            <field name="model_id" ref="hr_incentive_srcs.model_hr_incentive"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">

                        <table width='800'>
                            <tr>
                                <td>
                                    <strong>Requester:</strong>
                                </td>
                                <td>${object.request_id.name}</td>
                            </tr>

                            <tr>
                                <td>
                                    <strong>Date:</strong>
                                </td>
                                <td>${object.date}</td>
                            </tr>

                            <tr>
                                <td>
                                    <strong>Types:</strong>
                                </td>
                                <td>${object.types}</td>
                            </tr>

                            <tr>
                                <td>
                                    <strong>Company:</strong>
                                </td>
                                <td>${object.company_id.name}</td>
                            </tr>

                            <tr>
                                <td>
                                    <strong>Payment Type:</strong>
                                </td>
                                <td>${object.incentive_type_id.name}</td>
                            </tr>
                        </table>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Job Title</th>
                                    <th>Department</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                % for line in object.incentive_line:
                                <tr>
                                    <td>${line.employee_id.name}</td>
                                    <td>${line.job_id.name}</td>
                                    <td>${line.department_id.name}</td>
                                    <td>${line.amount}</td>
                                </tr>
                                % endfor
                            </tbody>
                        </table>
                    </p>
                </div>
            </field>
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <!--<field name="user_signature" eval="False"/>-->
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>