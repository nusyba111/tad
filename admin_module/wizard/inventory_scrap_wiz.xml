<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--     inventory scrap wizard form view-->
    <record id="inv_scrap_wiz_view" model="ir.ui.view">
        <field name="name">inventory.scrap.wiz.new</field>
        <field name="model">inventory.scrap.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="product"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" class="btn-primary" type="object"
                            data-hotkey="2"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="2"/>
                </footer>
            </form>

        </field>
    </record>
</odoo>